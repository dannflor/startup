<!doctype html>
<html lang="en" data-theme="dracula">
<head>
  <meta charset="utf-8">
  <meta viewpoint name="viewport" content="width=device-width, initial-scale=1">
  <title>Tradeworld</title>
  <link rel="stylesheet" type="text/css" href="/css/app.css">
</head>

<body class="flex-col bg-base-300 flex min-h-screen">
  <div class="navbar bg-base-100">
    <div class="navbar-start">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" /></svg>
        </label>
        <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
          <li><a href="/game">Build</a></li>
          <li><a href="/tech">Tech</a></li>
          <li><a class="text-primary">Trade</a></li>
        </ul>
      </div>
      <a href="/game" class="btn btn-ghost normal-case text-xl">Tradeworld</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <a href="/game" class="btn px-12 mx-8">Build</a>
      <a href="/tech" class="btn px-12 mx-8">Tech</a>
      <a class="btn btn-primary px-12 mx-8">Trade</a>
    </div>
    <div class="navbar-end">
      <a href="/logout" class="link link-secondary mr-4">Logout</a>
    </div>
  </div>
  <main class="mt-8 flex-grow flex">
    <ul class="ml-16 flex-col flex w-1/3">
      #for(trade in trades):
        <li id="cell#(trade.id)" class="mb-4 h-24 border-2 border-primary hover:border-primary-focus rounded-xl flex p-2 flex-row">
          <input type="checkbox" class="checkbox checkbox-md flex my-auto ml-4" onclick="fadeAway('cell#(trade.id)')"/> 
          <div class="my-auto flex flex-col ml-4 w-1/2">
            <div class="text-secondary font-serif font-bold text-xl">
              #(trade.seller)
            </div>
            <div>
              #(trade.message)
            </div>
          </div>
          <div class="flex flex-row">
            <div class="flex flex-col my-auto mx-4">
              <div class="text-md font-black text-center text-accent underline underline-offset-4">
                OFFER
              </div>
              <div class="mx-auto text-center">
                #(trade.offer.count) #(trade.offer.name)
              </div>
            </div>
            <div class="flex flex-col my-auto mx-4">
              <div class="text-md font-black text-center text-accent underline underline-offset-4">
                ASK
              </div>
              <div class="mx-auto text-center">
                #(trade.ask.count) #(trade.ask.name)
              </div>
            </div>
          </div>
        </li>
      #endfor
    </ul>
  </main>
</body>

<script src="/js/fadeAway.js"></script>

</html>